
@{
    ViewBag.Title = "Quản lí Blog";
    List<News> listNews = ViewBag.listNews;
}


<head>
    <script type="text/javascript" src="~/Content/ckeditor/ckeditor.js"></script>
</head>

@section head{
    <meta name="robots" content="noindex">
    }

