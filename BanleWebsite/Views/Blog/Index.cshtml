@section head{
    <meta property="og:url" content="@ogUrl" />
    <meta property="og:type" content="product" />
    <meta property="og:title" content="@news.Title" />
    <meta property="og:description" content="@news.ShortDes" />
    <meta property="og:image" content="@news.MainImage" />
}

<style>
    #mainNews img{
        display:block;
        margin-right:auto;
        margin-left:auto;
    }
</style>
<div class="container">
    <div class="row-fluid">
        <div class="span8" id="mainNews">
            <h3 style="font-family:VNOswald; margin-top:20px;">@news.Title</h3>
            @Html.Raw(news.Content)
        </div>
        <div class="span4">
            <h3 style="font-family:VNOswald; margin-top:20px;">Tin nổi bật</h3>
            
                @{
                    foreach (var item in listNews5Items)
                    {
                        <div class="row-fluid">
                            <div class="span4">
                                <a href="/Blog/@SLIMCONFIG.GenerateSlug(item.ID, item.Title)"><img src="@item.MainImage" alt="" class="img-rounded animate flip" /></a>
                            </div>
                            <div class="span8">
                                <a href="/Blog/@SLIMCONFIG.GenerateSlug(item.ID, item.Title)"><h4 style="font-family:VNOswald;">@item.Title</h4></a>
                            </div>
                        </div>
                        <br />
                    }
                }

                       
        </div>
    </div>
</div>

