    <!-- Header -->
    <header style="background-image:url('/Content/dataonhom/img/aodaidien/Back To School - 3.1.jpg')">
        <div class="container">
            <div class="intro-text">
                <!--                <div class="intro-lead-in">Chào mừng bạn đến với Your Fashion</div>-->
                <a href="#chonao" class="page-scroll btn btn-xl">Tiến hành đặt hàng</a>
            </div>
        </div>
    </header>

    <!-- Chon ao Section -->
    <section id="chonao">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Chọn áo</h2>
                    <h4 class="section-subheading text-muted">Mời bạn chọn loại áo cần đặt.</h4>
                </div>
            </div>
            <div class="row text-center" id="formchonao">
                <div class="col-md-3" id="aokhoac" style="height:400px" onclick="chonAo(this.id)">
                    <h4 class="service-heading">Áo khoác</h4>
                    <img src="~/Content/dataonhom/img/aodaidien/aokhoac.jpg" class="img-responsive" alt="">
                </div>
                <div class="col-md-3" id="aothuncotraitim" style="height:400px" onclick="chonAo(this.id)">
                    <h4 class="service-heading">Áo thun cổ trái tim</h4>
                    <img src="~/Content/dataonhom/img/aodaidien/aothuncotim.jpg" style="height:300px" class="img-responsive" alt="">
                </div>
                <div class="col-md-3" id="aothuncotron" style="height:400px" onclick="chonAo(this.id)">
                    <h4 class="service-heading">Áo thun cổ tròn</h4>
                    <img src="~/Content/dataonhom/img/aodaidien/aothuncotron.jpg" style="height:300px" class="img-responsive" alt="">
                </div>
                <div class="col-md-3" id="aothuncotru" style="height:400px" onclick="chonAo(this.id)">
                    <h4 class="service-heading">Áo thun cổ trụ</h4>
                    <img src="~/Content/dataonhom/img/aodaidien/aothuncotru.jpg" style="height:300px" class="img-responsive" alt="">
                </div>
            </div>
            <br />
            <div class="text-center">
                <a href="#chonmaukichco" class="page-scroll btn btn-primary">Chọn kích thước</a>
            </div>
        </div>
    </section>

    <!-- Chon mau va kich co Grid Section -->
    <section id="chonmaukichco" class="bg-light-gray">
        <div class="container">
            <!--Choose color-->
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Màu áo và kích thước</h2>
                    <h4 class="section-subheading text-muted">Vui lòng chọn màu áo và kích thước</h4>
                </div>
            </div>
            <!--./choose color-->
            <!--Choose size-->
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-5">
                    <div>
                        <div class="product-image text-center" id="khunghienmau">
                            <div style="height:150px;width:150px; margin-right: 50px;" class="pull-right">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-5">
                    <div id="pColor">
                        <label class="row"><strong>Màu sắc</strong></label>
                        <ul id="chooseColor" class="list-inline" style="font-size:25px"></ul>
                    </div>
                    <div id="pSize">
                        <label class="row"><strong>Size</strong></label>
                        <ul id="chooseSize" class="list-inline"></ul>
                    </div>

                    <br />
                    <div class="row bottom-left">
                        <a href="#chonhoatiet" class="page-scroll btn btn-primary">Chọn họa tiết</a>
                    </div>
                </div>
            </div>
            <!--./choose size-->
        </div>
    </section>

    <!-- Chon hoa tiet Section -->
    <section id="chonhoatiet" class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Chọn hình ảnh bạn muốn sử dụng</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    <div class="form-group">
                        <form enctype="multipart/form-data">
                            <input id="file-0a" class="file" type="file" multiple data-min-file-count="1">
                            <br>
                            <div class="text-center">
                                <button type="reset" class="btn btn-default">Reset</button>
                                <a href="#xacnhan" class=" page-scroll btn btn-primary">Xác nhận</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <p class="large text-muted">Chú thích.</p>
                </div>
            </div>
            <br />
            <br />
            <br />
            <br />
            <br />

        </div>
    </section>

    <!-- Xac nhan Section -->
    <section id="xacnhan">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Xác nhận</h2>
                    <h3 class="section-subheading text-muted">Xác nhận đơn hàng của bạn</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <form name="sentMessage" id="contactForm" novalidate>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Tên *" id="name" required data-validation-required-message="Vui lòng nhập tên.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Email *" id="email" required data-validation-required-message="Vui lòng nhập địa chỉ email.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input type="tel" class="form-control" placeholder="Điện thoại *" id="phone" required data-validation-required-message="Vui lòng nhập số điện thoại.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <textarea class="form-control" placeholder="Chú thích" id="message"></textarea>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button type="submit" class="btn btn-xl">Đặt hàng</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <span class="copyright">Your Fashion</span>
                </div>
                <div class="col-md-4">
                    <ul class="list-inline social-buttons">
                        <li>
                            <a href="https://www.facebook.com/yourfashionsp/"><i class="fa fa-facebook"></i></a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <ul class="list-inline quicklinks">
                        <li>
                            <a href="#">Về chúng tôi</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <!--script chon loai ao-->
    <script type="text/javascript">
        function chonAo(clickedId) {
            jQuery("#formchonao div").css({
                "border-style": "",
                "border-color": "",
            });
            jQuery("#" + clickedId).css({
                "border-style": "solid",
                "border-color": "orange",
            });
        };
    </script>

    <!--Script load va chon mau-->
    <script type="text/javascript">
        //Function load mau ao
        $(document).ready(loadMauAo(1));
        $(document).ready(loadSizeAo(1));
        function loadMauAo(id) {
            jQuery("#chooseColor").empty();
            $.ajax({
                url: "/OrderGroupShirt/GetListColor",
                type: "get",
                data: {
                    format: 'json',
                    id: id
                },
                success: function (result) {
                    var listColorCode = JSON.parse(result);
                    for (i = 0; i < listColorCode.length; i++) {
                        jQuery("#chooseColor").append("<li><a href='#1'><i class='fa fa-circle' id='" + listColorCode[i] + "' style='color:" + listColorCode[i] + "'></i></a></li>");
                    }
                },

            });
        }
        //Function load size ao
        function loadSizeAo(id) {
            jQuery("#chooseSize").empty();
            $.ajax({
                url: "/OrderGroupShirt/GetListSize",
                type: "get",
                data: {
                    format: 'json',
                    id: id
                },
                success: function (result) {
                    var listSizeName = JSON.parse(result);
                    for (i = 0; i < listSizeName.length; i++) {
                        jQuery("#chooseSize").append("<li><a href='#1' class='btn btn-sm boxcolor'>" + listSizeName[i] + "</a></li>");
                    }
                }
            });
        }
        //Function hien thi mau ao
        function hieThiMauAo(colorId) {
            jQuery(khunghienmau).css("background-color", colorId);
        };


    </script>

    <!-- jQuery -->
    <script src="~/Content/dataonhom/vendor/jquery/jquery.min.js"></script>

